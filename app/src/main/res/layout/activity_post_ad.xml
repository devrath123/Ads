<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.fragment.PostAdFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimen_10dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/ad_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/grey_border_et"
            android:fontFamily="@font/roboto_regular"
            android:hint="@string/ad_title"
            android:maxLength="80"
            android:maxLines="1"
            android:padding="@dimen/dimen_10dp"
            android:singleLine="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/grey_border_et">

            <Spinner
                android:id="@+id/ad_category_sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:background="@drawable/grey_border_et">

            <Spinner
                android:id="@+id/ad_sub_category_sp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:theme="@style/ThemeOverlay.AppCompat.Light" />

        </RelativeLayout>

        <EditText
            android:id="@+id/ad_description_et"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_250dp"
            android:hint="Ad description"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:gravity="top"
            android:background="@drawable/grey_border_et"
            android:padding="@dimen/dimen_10dp"
            android:maxLength="400"
            android:scrollbars="vertical"/>

        <EditText
            android:id="@+id/location_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/grey_border_et"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:padding="@dimen/dimen_10dp"
            android:hint="City/State"
            android:singleLine="true"
            android:maxLines="1"
            android:text="Pune"/>

    </LinearLayout>

</ScrollView>